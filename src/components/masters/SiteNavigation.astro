---
import SiteNavigationNavbar from "./site-navigation/SiteNavigationNavbar.svelte";
import SiteNavigationNavbarDropdown from "./site-navigation/SiteNavigationNavbarDropdown.svelte";
import SiteNavigationThemePicker from "./site-navigation/SiteNavigationThemePicker.svelte";
import SiteNavigationThemePickerToggle from "./site-navigation/SiteNavigationThemePickerToggle.svelte";
---

<SiteNavigationNavbar class="sticky top-0 z-50" client:load>
	<SiteNavigationThemePicker client:idle />
	<div class="border-b border-dynamic-neutral-300 bg-dynamic-neutral-0/75 py-3 backdrop-blur-md">
		<div class="container mx-auto px-6">
			<div class="flex items-center justify-between">
				<div>
					<a class="group" href="/">
						<div class="flex size-8 items-center justify-center rounded-full border-2 border-dynamic-neutral-950">
							<div class="pointer-events-none absolute size-16 animate-logo-ring rounded-full border-4 border-dynamic-neutral-200"></div>
							<div class="size-6 rounded-full bg-dynamic-neutral-950 transition-opacity duration-300 ease-in-out group-hover:opacity-0 [&:not(:hover)]:animate-logo-inner-grow"></div>
						</div>
					</a>
				</div>
				<div class="flex items-center gap-x-6">
					<div>
						<div class="flex items-center gap-x-6">
							<a class="font-display text-base font-medium text-dynamic-neutral-800">About</a>
							<div class="font-display text-base font-medium text-dynamic-neutral-800">
								<SiteNavigationNavbarDropdown client:load />
							</div>
						</div>
					</div>
					<SiteNavigationThemePickerToggle client:idle />
				</div>
			</div>
		</div>
	</div>
</SiteNavigationNavbar>
